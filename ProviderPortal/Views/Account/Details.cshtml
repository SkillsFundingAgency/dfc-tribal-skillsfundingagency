@using Tribal.SkillsFundingAgency.ProviderPortal.Models
@model Tribal.SkillsFundingAgency.ProviderPortal.Models.AddEditAccountViewModel
@{
    ViewBag.Title = Model.EditingSelf ?
        AppGlobal.Language.GetText(this, "TitleMy", "View my User Details")
        : AppGlobal.Language.GetText(this, "TitleMy", "View User");
}

<h2>@(Model.EditingSelf ?
          AppGlobal.Language.GetText(this, "TitleMy", "View my User Details")
          : AppGlobal.Language.GetText(this, "Title", "View User"))</h2>

<div class="row">
    <div class="col-md-12">

        <h4>@(Model.EditingSelf ?
                  AppGlobal.Language.GetText(this, "SubHeaderMy", "")
                  : AppGlobal.Language.GetText(this, "SubHeader", ""))</h4>
        <hr />
        <dl class="dl-horizontal">
            
            <dt>
                @Html.DisplayNameFor(m => m.Email)
            </dt>

            <dd>
            @Html.DisplayFor(m => m.Email)
            <dd>

            <dt>
                @Html.DisplayNameFor(m => m.RoleId)
            </dt>

            <dd>
                @Html.DisplayFor(m => m.RoleId)
            </dd>
               
            <dt>
                @Html.DisplayNameFor(m => m.UserTypeId)
            </dt>

            <dd>
                @Html.DisplayFor(m => m.UserType)
            </dd>
            
            @if (Model.ProviderId.StartsWith("P"))
            {
                <dt>
                    @Html.DisplayNameFor(m => m.Provider)
                </dt>

                <dd>
                    @Html.DisplayFor(m => m.Provider)
                </dd>
            }
            
            @if (Model.ProviderId.StartsWith("O"))
            {
                <dt>
                    @Html.DisplayNameFor(m => m.Organisation)
                </dt>

                <dd>
                    @Html.DisplayFor(m => m.Organisation)
                </dd>
            }

            <dt>
                @Html.DisplayNameFor(m => m.Name)
            </dt>
            <dd>
                @Html.DisplayFor(m => m.Name)
            </dd>

            @*@Html.DisplayFor(m => m.Address)*@
            <dt>
                @Html.DisplayNameFor(model => model.Address.AddressLine1)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Address.AddressLine1)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Address.AddressLine2)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Address.AddressLine2)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Address.Town)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Address.Town)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Address.County)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Address.County)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Address.Postcode)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Address.Postcode)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Address.Region)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Address.Region)
            </dd>
            @* End of @Html.DisplayFor(m => m.Address) *@

            <dt>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </dt>
            
            <dd>
                @Html.DisplayFor(model => model.PhoneNumber)
            </dd>
            
        </dl>
        
        @Html.ActionLink(AppGlobal.Language.GetText(this, "BackToUserList", "Back to the list of users"), "Users", "Manage", null, new { @class="btn btn-default"})

    </div>
</div>