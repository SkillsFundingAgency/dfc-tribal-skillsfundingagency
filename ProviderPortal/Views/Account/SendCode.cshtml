@model Tribal.SkillsFundingAgency.ProviderPortal.Models.SendCodeViewModel
@{
    ViewBag.Title = AppGlobal.Language.GetText(this, "Title", "Send");
}

<h2>@AppGlobal.Language.GetText(this, "Header", "Send")</h2>

@using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
    @Html.AntiForgeryToken()
    @Html.Hidden("rememberMe", @Model.RememberMe)
    <h4>@AppGlobal.Language.GetText(this, "FormHeader", "Send verification code")</h4>
    <hr />
    <div class="row">
        <div class="col-md-8">
            @AppGlobal.Language.GetText(this, "SelectProvider", "Select Two-Factor Authentication Provider:")
            @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
            <input type="submit" value="@AppGlobal.Language.GetText(this, "Submit", "Submit")" class="btn btn-default" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
