@model Tribal.SkillsFundingAgency.ProviderPortal.Models.ProviderUnableToCompleteHistoryReportViewModel
@{
    ViewBag.Title = AppGlobal.Language.GetText(this, "Title", "Unable To Complete Providers");
}

<h2>@AppGlobal.Language.GetText(this, "Header", "Unable To Complete Providers")</h2>
<hr/>
@Html.Raw(AppGlobal.Language.GetText(this, "TableHeader", ""))

<table class="dataTable dt-responsive table table-striped table-bordered" data-ajax="@Url.Action("UnableToCompleteJson")" data-created-row="rowCreated" data-name-index="2">
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(m => m.Items.First().ProviderId)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(m => m.Items.First().Ukprn)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(m => m.Items.First().ProviderName)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(m => m.Items.First().UnableToCompleteReasonChecks)
            </th>
            <th scope="col" class="none">
                @Html.DisplayNameFor(m => m.Items.First().UnableToCompleteText)
            </th>
            <th scope="col" data-type="datetime-eu">
                @Html.DisplayNameFor(m => m.Items.First().UnableToCompleteDateCreated)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(m => m.Items.First().UnableToCompleteUsername)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.ProviderId)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Ukprn)
                </td>
                <td>
                    @Html.DisplayFor(m => item.ProviderName)
                </td>
                <td>
                    @Html.DisplayFor(m => item.UnableToCompleteReasonChecks)
                </td>
                <td>
                    @Html.DisplayFor(m => item.UnableToCompleteText)
                </td>
                <td>
                    @Html.DisplayFor(m => item.UnableToCompleteDateCreated)
                </td>
                <td>
                    @Html.DisplayFor(m => item.UnableToCompleteUsername)
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    
    <script type="text/javascript">

        var nameIndex = parseInt($("table.dataTable").data("name-index"));

        function rowCreated(row, data, index) {
            var $name = $("td:eq(" + nameIndex + ")", row);
            $name.html("<a class='btn-link' href='@Url.Action("Dashboard","Report")/" + data[0] + "'>" + $name.text() + "</a>");
        }

    </script>
}


