@using Tribal.SkillsFundingAgency.ProviderPortal.Entities
@model Tribal.SkillsFundingAgency.ProviderPortal.Models.AddEditProviderUnableToCompleteModel
@{
    Layout = null;
}
@using (Html.BeginForm("UnableToCompleteFromDialog", "Provider", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form">
        
        @Html.EditableDataValidationSummary(false)
        
        @Html.RequiredFields(new {@class = "col-md-offset-3"}) 
        @Html.HiddenFor(model => model.ProviderUnableToCompleteId)
        @Html.HiddenFor(model => model.ProviderId)

        <div class="form-group">
            @Html.LanguageLabelFor(model => model.UnableToCompleteFailureReasons, new {@class = "control-label col-md-3"})
            <div class="col-md-9">
                    @foreach (UnableToCompleteFailureReason fr in Model.UnableToCompleteFailureReasons)
                    {
                        <div class="row col-md-12">
                            <span class="col-md-1"><input id="@fr.UnableToCompleteFailureReasonId" title="@fr.Description" type="checkbox" name="SelectedUnableToCompleteFailureReasons" value="@fr.UnableToCompleteFailureReasonId" @(Model.SelectedUnableToCompleteFailureReasons.Contains(fr.UnableToCompleteFailureReasonId) ? "checked" : "") /></span>
                            <span class="col-md-11"><label for="@fr.UnableToCompleteFailureReasonId" title="@fr.Description" style="font-weight: normal;">@fr.Description</label></span>
                        </div>
                    }
                    @Html.ValidationMessageFor(model => model.UnableToCompleteFailureReasons)
            </div>
        </div>

        <div class="form-group">
            @Html.LanguageLabelFor(model => model.TextUnableToComplete, new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.TextUnableToComplete, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TextUnableToComplete)
            </div>
        </div>

       
        
        <div style="clear: both;"></div>

    </div>
}
