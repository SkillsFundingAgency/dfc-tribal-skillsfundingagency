@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = AppGlobal.Language.GetText(this, "Title", "Error");
}

<h2 class="text-danger">@AppGlobal.Language.GetText(this, "Header", "Error")</h2>

@{
    if (String.IsNullOrEmpty(ViewBag.errorMessage))
    {
        <h3 class="text-danger">@AppGlobal.Language.GetText(this, "Message", "An error occurred while processing your request.")</h3>
    }
    else
    {
        <h3 class="text-danger">@ViewBag.errorMessage</h3>
    }
}