@model Tribal.SkillsFundingAgency.ProviderPortal.Models.SetPasswordViewModel
@{
    ViewBag.Title = AppGlobal.Language.GetText(this, "Title", "Create Password");
}

<h2>@AppGlobal.Language.GetText(this, "Header", "Create Password.");</h2>
<p class="text-info">
    @AppGlobal.Language.GetText(this, "Message", 
    @"You do not have a local username/password for this site. Add a local
    account so you can log in without an external login.")
</p>

@using (Html.BeginForm("SetPassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <h4>@AppGlobal.Language.GetText(this, "FormHeader", "Create Local Login")</h4>
    <hr />
    @Html.EditableDataValidationSummary("", new { @class = "text-danger" })
    @Html.RequiredFields(new {@class = "col-md-offset-2"})
    <div class="form-group">
        @Html.LanguageLabelFor(m => m.NewPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LanguageLabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="@AppGlobal.Language.GetText(this, "Submit", "Set password")" class="btn btn-default" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}