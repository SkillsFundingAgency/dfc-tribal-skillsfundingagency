@model Tribal.SkillsFundingAgency.ProviderPortal.Models.ListStopWordsModel
@{
    ViewBag.Title = AppGlobal.Language.GetText(this, "Title", "View all Course Search API Stop Words");
}

<div class="col-md-12" style="padding-left: 0px; padding-right: 0px;">
    <div class="col-md-9" style="padding-left: 0px; padding-right: 0px;">
        <h2>@AppGlobal.Language.GetText(this, "Header", "View all Course Search API Stop Words")</h2>
    </div>
    @if (Permission.HasPermission(false, false, Permission.PermissionName.CanEditStopWords))
    {
        <div class="col-md-3 text-right" style="padding-left: 0px; padding-right: 0px;">
            <div style="margin-top: 18px; margin-bottom: 8px;">
                <a href="@Url.Action("Add", "StopWord", null)" class="btn">@AppGlobal.Language.GetText(this, "AddStopWord", "Add Search API Stop Word")</a>
            </div>
        </div>
    }
</div>

@Html.DisplayFor(m => m.Items, "_ListStopWords")

@section scripts {
    @Html.Partial("_ListStopWordsScripts", Model)
}
