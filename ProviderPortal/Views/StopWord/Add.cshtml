@using Tribal.SkillsFundingAgency.ProviderPortal.Areas.Api.Models
@model Tribal.SkillsFundingAgency.ProviderPortal.Models.AddStopWordModel

@{
    ViewBag.Title = AppGlobal.Language.GetText(this, "Title", "Add Stop Word");
}

<h2>@AppGlobal.Language.GetText(this, "Header", "Add Stop Word")</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>@AppGlobal.Language.GetText(this, "SubHeader", "")</h4>
        <hr />
        @Html.EditableDataValidationSummary(false)

        @Html.RequiredFields(new { @class = "col-md-offset-2" })

        <div class="form-group">
            @Html.LanguageLabelFor(model => model.StopWord, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.StopWord, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.StopWord)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input name="Create" type="submit" value="@AppGlobal.Language.GetText(this, "Save", "Save")" class="btn btn-success" />
            </div>
        </div>
    </div>
}
