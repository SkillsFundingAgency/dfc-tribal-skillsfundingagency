<script type="text/javascript">

    function deleteStopWord(e, stopWord) {
        e.preventDefault();
        if (!confirm('@AppGlobal.Language.GetText(this, "DeleteStopWordConfirmation", "Are you sure you want to delete the stop word {0}?")'.replace("{0}", stopWord))) {
            return false;
        }
        var url = '@Url.Action("Delete", "StopWord")';
        $.ajax({
            url: url,
            data: "stopWord=" + stopWord,
            success: function() {
                window.location.reload(true);
            },
            error: function() {
                alert("Error deleting stop word");
            },
            cache: false,
            type: 'POST',
            contentType: 'application/x-www-form-urlencoded, charset=utf-8'
        });
    }

</script>
