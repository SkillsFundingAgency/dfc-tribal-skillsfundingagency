@using Tribal.SkillsFundingAgency.ProviderPortal.Models
@model Tribal.SkillsFundingAgency.ProviderPortal.Models.AddEditContentViewModel

@Html.HiddenFor(m => m.ContentId)
@Html.HiddenFor(m => m.Version)
@Html.HiddenFor(m => m.ContextsInUse)
<input type="hidden" id="UnavailableContexts" value="@((int)Model.ContextsInUse)"/>
@Html.HiddenFor(m => m.SubmitAction)
@Html.HiddenFor(m => m.RecordStatusId)

<div class="form-group">
    @Html.LanguageLabelFor(m => m.Path, new {@class = "control-label col-md-2"})
    <div class="col-md-10">
        @if (Model.ContentId == 0)
        {
            @Html.TextBoxFor(m => m.Path, new {@class = "form-control"})
            @Html.ValidationMessageFor(m => m.Path)
        }
        else
        {
            @Html.HiddenFor(m => m.Path)
            @Html.DisplayFor(m => m.Path)
        }
    </div>
</div>

<div class="form-group">
    @Html.LanguageLabelFor(m => m.Title, new{@class = "control-label col-md-2"})
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.Title, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => m.Title)
    </div>
</div>

<div class="form-group">
    @Html.LanguageLabelFor(m => m.Body, new {@class = "control-label col-md-2"})
    <div class="col-md-10">
        @Html.TextAreaFor(m => m.Body, new {@class = "form-control html-editor", @rows = 20, @cols = 80})
        @Html.ValidationMessageFor(m => m.Body)
    </div>
</div>

<div class="form-group">
    @Html.LanguageLabelFor(m => m.Styles, new {@class = "control-label col-md-2"})
    <div class="col-md-10">
        @Html.TextAreaFor(m => m.Styles, new {@class = "form-control text-editor", @rows = 10, @cols = 80, @data_editor="css"})
        @Html.ValidationMessageFor(m => m.Styles)
    </div>
</div>

<div class="form-group">
    @Html.LanguageLabelFor(m => m.Scripts, new {@class = "control-label col-md-2"})
    <div class="col-md-10">
        @Html.TextAreaFor(m => m.Scripts, new {@class = "form-control text-editor col-md-10", @rows = 10, @cols = 80, @data_editor="javascript"})
        @Html.ValidationMessageFor(m => m.Scripts)
    </div>
</div>

<div class="form-group">
    @Html.LanguageLabelFor(m => m.Summary, new {@class = "control-label col-md-2"})
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.Summary, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => m.Summary)
    </div>
</div>

<h3>@AppGlobal.Language.GetText(this, "AvailabilityHeader", "Make Available to Users in the Following Contexts")</h3>
<hr/>

    <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
            @Html.ValidationMessageFor(m => m.UserContext)
        </div>
    </div>

<div id="content-availability">

    <div class="form-group">
        @Html.LanguageLabelFor(m => m.VisibleToProvider, new {@class = "control-label col-md-2"})
        <div class="col-md-10">
            @Html.EditorFor(m => m.VisibleToProvider, new {@class = "form-control"})
            @Html.ValidationMessageFor(m => m.VisibleToProvider)
        </div>
    </div>

    <div class="form-group">
        @Html.LanguageLabelFor(m => m.VisibleToOrganisation, new {@class = "control-label col-md-2"})
        <div class="col-md-10">
            @Html.EditorFor(m => m.VisibleToOrganisation, new {@class = "form-control"})
            @Html.ValidationMessageFor(m => m.VisibleToOrganisation)
        </div>
    </div>

    <div class="form-group">
        @Html.LanguageLabelFor(m => m.VisibleToAdministration, new {@class = "control-label col-md-2"})
        <div class="col-md-10">
            @Html.EditorFor(m => m.VisibleToAdministration, new {@class = "form-control"})
            @Html.ValidationMessageFor(m => m.VisibleToAdministration)
        </div>
    </div>

    <div class="form-group selection-hidden">
        @Html.LanguageLabelFor(m => m.VisibleToAuthenticatedNoAccess, new {@class = "control-label col-md-2"})
        <div class="col-md-10">
            @Html.EditorFor(m => m.VisibleToAuthenticatedNoAccess, new {@class = "form-control"})
            @Html.ValidationMessageFor(m => m.VisibleToAuthenticatedNoAccess)
        </div>
    </div>

    <div class="form-group">
        @Html.LanguageLabelFor(m => m.VisibleToUnauthenticated, new {@class = "control-label col-md-2"})
        <div class="col-md-10">
            @Html.EditorFor(m => m.VisibleToUnauthenticated, new {@class = "form-control"})
            @Html.ValidationMessageFor(m => m.VisibleToUnauthenticated)
        </div>
    </div>

    <div class="form-group selection-hidden">
        @Html.LanguageLabelFor(m => m.VisibleToDeletedProvider, new {@class = "control-label col-md-2"})
        <div class="col-md-10">
            @Html.EditorFor(m => m.VisibleToDeletedProvider, new {@class = "form-control"})
            @Html.ValidationMessageFor(m => m.VisibleToDeletedProvider)
        </div>
    </div>

    <div class="form-group selection-hidden">
        @Html.LanguageLabelFor(m => m.VisibleToDeletedOrganisation, new {@class = "control-label col-md-2"})
        <div class="col-md-10">
            @Html.EditorFor(m => m.VisibleToDeletedOrganisation, new {@class = "form-control"})
            @Html.ValidationMessageFor(m => m.VisibleToDeletedOrganisation)
        </div>
    </div>
    
    <div class="form-group">
        <span class="control-label col-md-2"></span>
        <div class="col-md-10">
            <button class="btn-link" id="select-all">@AppGlobal.Language.GetText(this, "SelectAll", "Select All")</button> |
            <button class="btn-link" id="select-none">@AppGlobal.Language.GetText(this, "SelectNone", "Clear Selection")</button> |
            <button class="btn-link" id="select-invert">@AppGlobal.Language.GetText(this, "InvertSelection", "Invert Selection")</button> |
            <button class="btn-link" id="select-more">@AppGlobal.Language.GetText(this, "MoreOptions", "More Options")</button>    
            <button class="btn-link" id="select-fewer" style="display:none">@AppGlobal.Language.GetText(this, "FewerOptions", "Fewer Options")</button>    
        </div>
    </div>
</div>
